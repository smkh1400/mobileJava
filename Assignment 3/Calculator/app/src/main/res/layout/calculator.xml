<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="bottom"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textSize="30sp"
        android:layout_marginBottom="30dp"
        android:gravity="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/seven"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="7"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/eight"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="8"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/nine"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="9"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/cross"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                android:text="×"
                android:textSize="22sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/four"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/five"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="5"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/six"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="6"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/minus"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                android:text="-"
                android:textSize="22sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/one"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/two"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="2"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/three"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="3"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/plus"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                android:text="+"
                android:textSize="22sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/zero"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/AC"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="AC"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/clear"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                app:backgroundTint="@null"
                android:backgroundTint="#591EE9BA"
                android:text="⌫"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/equal"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button"
                android:text="="
                android:textSize="22sp"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>